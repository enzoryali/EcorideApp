{# admin.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Dashboard Administrateur</h1>
        <div class="bg-dark text-white p-3 rounded shadow-sm">
            <small class="d-block text-uppercase">Total Gains Plateforme</small>
            <span class="h3 fw-bold text-success">{{ totalCredits }} €</span>
        </div>
    </div>

    {# --- GRAPHIQUES --- #}
    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-3">
                <h5 class="text-muted"><i class="bi bi-graph-up me-2"></i>Covoiturages par jour</h5>
                <canvas id="chartTrajets"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-3">
                <h5 class="text-muted"><i class="bi bi-cash-stack me-2"></i>Crédits gagnés par jour</h5>
                <canvas id="chartCredits"></canvas>
            </div>
        </div>
    </div>

    {# --- GESTION DES UTILISATEURS --- #}
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Gestion des comptes (Utilisateurs & Employés)</h5>
            <a href="{{ path('app_register_employe') }}" class="btn btn-sm btn-primary">Créer un compte Employé</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Pseudo</th>
                        <th>Rôle</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for u in allUsers %}
                        <tr>
                            <td>{{ u.pseudo }}</td>
                            <td>
                                {% if 'ROLE_ADMIN' in u.roles %}<span class="badge bg-danger">Admin</span>
                                {% elseif 'ROLE_EMPLOYE' in u.roles %}<span class="badge bg-warning">Employé</span>
                                {% else %}<span class="badge bg-info">Utilisateur</span>{% endif %}
                            </td>
                            <td>
                                {% if u.isSuspended %} {# Supposons un champ isSuspended dans User #}
                                    <span class="badge bg-secondary">Suspendu</span>
                                {% else %}
                                    <span class="badge bg-success">Actif</span>
                                {% endif %}
                            </td>
                            <td>
                                <form method="post" action="{{ path('app_admin_toggle_user', {id: u.id}) }}">
                                    <button class="btn btn-sm {{ u.isSuspended ? 'btn-outline-success' : 'btn-outline-danger' }}">
                                        {{ u.isSuspended ? 'Réactiver' : 'Suspendre' }}
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{# 1. Charger la librairie cdn #}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

{# 2. Transférer les données #}
<script>
    window.statsData = {
        labels: {{ statsGraph.labels|json_encode|raw }},
        trajets: {{ statsGraph.trajets|json_encode|raw }},
        credits: {{ statsGraph.credits|json_encode|raw }}
    };
</script>
{% block javascripts %}
    <script src="{{ asset('js/admin_dashboard.js') }}"></script>
{% endblock %}
{% endblock %}