{% extends 'base.html.twig' %}

{% block title %}Modération des avis - EcoRide{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Modération des avis</h1>
        <a href="{{ path('app_admin') }}" class="btn btn-outline-secondary">Retour au Dashboard</a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Utilisateur</th>
                        <th>Note</th>
                        <th>Commentaire</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for avi in avis %}
                    <tr>
                        <td><strong>{{ avi.users|first.prenom }} {{ avi.users|first.nom }}</strong></td>
                        <td>
                            {% for i in 1..5 %}
                                <i class="bi bi-star{{ i <= avi.note ? '-fill text-warning' : '' }}"></i>
                            {% endfor %}
                        </td>
                        <td>{{ avi.commentaire }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_admin_avis_valider', {id: avi.id}) }}" 
                                   class="btn btn-sm btn-success">
                                   Valider
                                </a>
                                <a href="{{ path('app_admin_avis_refuser', {id: avi.id}) }}" 
                                   class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Supprimer définitivement cet avis ?')">
                                   Refuser
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4 text-muted">
                            Aucun avis en attente de modération.
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}