<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EcoRide{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/logo.jpg') }}">
        
        {# Bootstrap & Icons #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
        
        {# TON FICHIER CSS EXTERNE #}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        
        {% block stylesheets %}{% endblock %}
    </head>
    
    <body class="d-flex flex-column min-vh-100">
        <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow-sm">
            <div class="container">
                <a class="navbar-brand navbar-brand-logo" href="{{ path('app_home') }}">
                    <img src="{{ asset('images/logo3-Photoroom1.png') }}" 
                         alt="EcoRide Logo" 
                         class="navbar-logo">
                </a>
            
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav ms-auto align-items-center">
                        <a class="nav-link" href="{{ path('app_covoiturage_index') }}"> Covoiturages</a>
                        <a class="nav-link" href="{{path('app_contact')}}"> Contact</a>

                        <div class="ms-lg-3 d-flex align-items-center">
                            {% if app.user %}
                                <a class="nav-link" href="{{ path('app_covoiturage') }}">Publier</a>
                                <a class="nav-link" href="{{ path('app_user') }}">Mon Espace</a>
                                <a class="btn btn-outline-light btn-sm ms-2" href="{{ path('app_logout') }}">Déconnexion</a>
                            {% else %}
                                <a class="nav-link fw-bold" href="#" data-bs-toggle="modal" data-bs-target="#authModal">
                                    <i class="bi bi-person-circle"></i> Connexion
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <main class="flex-grow-1">
            {% for label, messages in app.flashes %}
                <div class="container mt-3">
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show shadow-sm" role="alert">
                            {% if label == 'danger' %}
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            {% elseif label == 'success' %}
                                <i class="bi bi-check-circle-fill me-2"></i>
                            {% endif %}
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <footer id="contact" class="bg-dark text-white py-4 mt-auto">
            <div class="container text-center">
                <p class="mb-1">Contact : <a href="mailto:contact@ecoride.fr" class="text-success text-decoration-none">contact@ecoride.fr</a></p>
                <a href="#" class="text-white-50 small text-decoration-none">Mentions Légales</a>
            </div>
        </footer>

        {# MODALE DE CONNEXION #}
        <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-sm">
                <div class="modal-content border-0 shadow">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title" id="authModalLabel">Bienvenue</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center p-4">
                        <p class="mb-4">Connectez-vous pour accéder à vos covoiturages.</p>
                        <div class="d-grid gap-3">
                            <a href="{{ path('app_login') }}" class="btn btn-success">Se connecter</a>
                            <div class="position-relative my-2">
                                <hr>
                                <span class="position-absolute top-50 start-50 translate-middle bg-white px-2 small text-muted">ou</span>
                            </div>
                            <a href="{{ path('app_register') }}" class="btn btn-outline-success">Créer un compte</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# SCRIPTS #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        
      
        
        {% block javascripts %}{% endblock %}
    </body>
</html>