{% extends 'base.html.twig' %}

{% block title %}EcoRide - Rechercher un trajet{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-success">Trajets disponibles</h1>

   {# On réutilise le bloc du home #}
<div class="card shadow p-4 border-0 mb-5">
    {{ form_start(searchForm, {'action': path('app_covoiturage_index'), 'method': 'GET'}) }}
        <div class="row g-3">
            <div class="col-md-4">{{ form_widget(searchForm.depart) }}</div>
            <div class="col-md-4">{{ form_widget(searchForm.arrivee) }}</div>
            <div class="col-md-3">{{ form_widget(searchForm.date) }}</div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-success w-100"><i class="bi bi-search"></i></button>
            </div>
        </div>

        <div class="text-start mt-3">
            <button class="btn btn-link text-success p-0 text-decoration-none" type="button" data-bs-toggle="collapse" data-bs-target="#extraFilters">
                <i class="bi bi-plus-circle"></i> Plus de filtres
            </button>
        </div>

        <div class="collapse mt-3" id="extraFilters">
            <div class="row g-3 border-top pt-3">
                <div class="col-md-4">{{ form_row(searchForm.prixMax) }}</div>
                <div class="col-md-4">{{ form_row(searchForm.dureeMax) }}</div>
                <div class="col-md-4">{{ form_row(searchForm.noteMin) }}</div>
                <div class="col-12 text-center mt-2">
                    {{ form_widget(searchForm.estEcologique) }} {{ form_label(searchForm.estEcologique) }}
                </div>
            </div>
        </div>
    {{ form_end(searchForm, {'render_rest': false}) }}
</div>



<div class="row">
    {% for trajet in trajets %}
        {% set chauffeur = trajet.voiture.user %} {# On récupère le propriétaire de la voiture #}
        
    <div class="col-12 mb-4">
        <div class="card shadow-sm trajet-card">
            <div class="card-body">
                <div class="row align-items-center">
                
                {# INFOS CHAUFFEUR #}
                    <div class="col-md-3 text-center border-end">
                        <img src="{{ chauffeur.photo|default('https://ui-avatars.com/api/?name=' ~ chauffeur.pseudo) }}" 
                         class="driver-thumb" 
                         alt="Photo de {{ chauffeur.pseudo }}">
                    <h6 class="driver-name">{{ chauffeur.pseudo }}</h6>
                {# Affichage de la note (tu peux adapter selon ta fonction de calcul) #}
                    <div class="text-warning small">
                        <i class="bi bi-star-fill"></i> 
                        {{ chauffeur.noteMoyenne }}/5
                    </div>
                    </div>
                {# INFOS TRAJET (Heures, Dates, Écologie) #}
                    <div class="col-md-6 px-4">
                        <div class="d-flex justify-content-between mb-2">
                            <div class="text-start">
                                <span class="badge bg-light text-dark">{{ trajet.heureDepart|date('H:i') }}</span>
                                <span class="badge bg-light text-dark">{{ trajet.dateDepart|date('d/m/Y') }}</span>                
                                    <p class="text-muted small">{{ trajet.lieuDepart }}</p>
                             </div>
                                <div class="align-self-center text-success">
                                    <i class="bi bi-arrow-right fs-4"></i>
                                </div>
                            <div class="text-end">
                                <span class="badge bg-light text-dark">{{ trajet.heureArrivee|date('H:i') }}</span>
                                <span class="badge bg-light text-dark">{{ trajet.dateArrivee|date('d/m/Y') }}</span>                                  
                                    <p class="text-muted small">{{ trajet.lieuArrivee }}</p>
                            </div>
                        </div>

                {# MENTION ÉCOLOGIQUE #}
                    <div class="mt-2">
                        {% if 'electrique' in trajet.voiture.energie|lower|replace({'é': 'e'}) %}
                            <span class="badge bg-success p-2">
                            <i class="bi bi-leaf-fill"></i> Voyage écologique
                            </span>
                                 <small class="text-success d-block mt-1">Ce trajet émet 0g de CO2 durant la conduite.</small>
                        {% else %}
                            <span class="badge bg-secondary-subtle text-muted p-2">
                                  Standard ({{ trajet.voiture.energie }})
                            </span>
                        {% endif %}
                    </div>
                    </div>

                {# PRIX, PLACES & BOUTON DÉTAIL #}
                    <div class="col-md-3 text-end">
                        <h3 class="text-success fw-bold mb-0">{{ trajet.prixPersonne }} €</h3>
                        <p class="text-muted small mb-3">{{ trajet.nbPlace }} places restantes</p>
                            <a href="{{ path('app_covoiturage_show', {'id': trajet.id}) }}" class="btn btn-success w-100">
                                <i class="bi bi-eye"></i> Détails
                            </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
   
    {% endfor %}
</div>
{% endblock %}