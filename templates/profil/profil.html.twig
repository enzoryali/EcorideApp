{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row g-4">
        
        {# --- SIDEBAR GAUCHE (Col-lg-4) --- #}
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body text-center p-4">
                    <div class="mb-3 position-relative d-inline-block">
                        <img src="{{ user.photo ? asset('uploads/photos/' ~ user.photo) : 'https://ui-avatars.com/api/?name=' ~ user.pseudo }}" 
                             class="profile-avatar"
                             alt="Photo de profil">
                        <a href="{{ path('app_user_photo') }}" class="btn btn-sm btn-primary position-absolute bottom-0 end-0 rounded-circle">
                            <i class="bi bi-camera"></i>
                        </a>
                    </div>
                    <h4 class="fw-bold mb-0">{{ user.pseudo }}</h4>
                    <p class="text-muted small">Membre EcoRide</p>
                    
                    <div class="alert credit-badge">
                    <small class="credit-label">Crédits</small>
                     <span class="h4 fw-bold">{{ user.credit }}€</span>
                    </div>

                    <div class="mt-3">
                        <span class="badge {{ hasVoiture ? 'bg-success' : 'bg-secondary' }} w-100 py-2">
                            <i class="bi bi-person-badge me-2"></i>
                            {{ hasVoiture ? 'Chauffeur / Passager' : 'Passager uniquement' }}
                        </span>
                    </div>
                </div>
            </div>
        </div> {# FIN SIDEBAR GAUCHE #}

        {# --- CONTENU DROIT (Col-lg-8) --- #}
        <div class="col-lg-8">
            {# Section Véhicules #}
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-car-front me-2"></i>Mes véhicules</h5>
                    <div class="d-flex gap-2">
                        {% if hasVoiture %}
                            <a href="{{ path('app_covoiturage') }}" class="btn btn-success btn-sm shadow-sm">
                                <i class="bi bi-megaphone-fill me-1"></i> Publier
                            </a>
                        {% endif %}
                        <a href="{{ path('app_voiture_new') }}" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-plus-circle"></i> Ajouter un nouveau véhicule
                        </a>
                    </div>
                </div>
                <div class="list-group list-group-flush">
                    {% for v in mesVoitures %}
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <div>
                                <span class="fw-bold text-dark">{{ v.marque.libelle }} {{ v.modele }}</span>
                                <span class="badge bg-info text-dark ms-2">{{ v.nbPlaces }} places</span>
                                <div class="small text-muted">{{ v.immatriculation }} • {{ v.energie }}</div>
                            </div>
                            <a href="{{ path('app_voiture_edit', {'id': v.id}) }}" class="btn btn-light btn-sm shadow-sm">
                                <i class="bi bi-pencil text-primary"></i>
                            </a>
                        </div>
                    {% else %}
                        <div class="p-4 text-center text-muted small">Aucun véhicule enregistré.</div>
                    {% endfor %}
                </div>
            </div>

            {# Historique Trajets #}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-dark text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-clock-history me-2"></i>Historique</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        {% set aDesActivites = false %}

                        {# 1. CONDUCTEUR #}
                        {% for voiture in user.voitures %}
                            {% for trajet in voiture.covoiturages|reverse %}
                                {% set aDesActivites = true %}
                                <div class="list-group-item p-3 border-start border-4 border-success mb-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="badge bg-success mb-1">Conducteur</span>
                                            <span class="badge bg-secondary mb-1">{{ trajet.statut }}</span><br>
                                            <strong>{{ trajet.lieuDepart }}</strong> → <strong>{{ trajet.lieuArrivee }}</strong>
                                        </div>
                                        <div class="text-end small">
                                            {{ trajet.dateDepart|date('d/m/Y') }}
                                        </div>
                                    </div>

                                   {# AFFICHAGE DES AVIS REÇUS POUR CE TRAJET #}
{% if trajet.statut in ['Terminé', 'Clôturé'] %}
    <div class="border-top-light">
    <small class="section-label-small">Avis reçus</small>

        {% set avisAffiche = false %}

        {# On parcourt les avis liés directement à l'utilisateur connecté (le chauffeur) #}
        {% for avi in user.avis %}
            {# 
               Puisque nous n'avons pas de lien direct Avis <-> Trajet, 
               on affiche les avis validés. 
               Note : Sans lien Trajet, cela affichera tous vos avis validés 
               sous chaque trajet terminé. 
            #}
            {% if avi.statut == 'validé' %}
                {% set avisAffiche = true %}
                <div class="bg-light p-2 rounded mt-2 shadow-sm border-start border-3 border-warning">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <span class="note-badge">
    {{ avi.note }}/5 <span class="star-icon">★</span>
</span>
                        <small class="text-muted">Avis publié</small>
                    </div>
                    <p class="small mb-0 fst-italic text-dark">"{{ avi.commentaire }}"</p>
                </div>
            {% endif %}
        {% endfor %}

        {% if not avisAffiche %}
            <p class="text-muted small mb-0 mt-1 fst-italic">Aucun avis reçu pour le moment.</p>
        {% endif %}
    </div>
{% endif %}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {# 2. PASSAGER #}
                        {% for trajet in user.covoiturages|reverse %}
                            {% set aDesActivites = true %}
                            <div class="list-group-item p-3 border-start border-4 border-info mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="badge bg-info mb-1">Passager</span>
                                        <span class="badge bg-secondary mb-1">{{ trajet.statut }}</span><br>
                                        <strong>{{ trajet.lieuDepart }}</strong> → <strong>{{ trajet.lieuArrivee }}</strong>
                                    </div>
                                    <div class="text-end small">
                                        {{ trajet.dateDepart|date('d/m/Y') }}
                                    </div>
                                </div>

                                {% if trajet.statut in ['Terminé', 'Clôturé'] %}
                                    <div class="mt-2 text-end">
                                        <a href="{{ path('app_avis_new', {'id': trajet.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="bi bi-star"></i> Noter le chauffeur
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}

                        {% if not aDesActivites %}
                            <div class="p-5 text-center text-muted">Aucune activité récente.</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div> {# FIN CONTENU DROIT #}
    </div>
</div>
{% endblock %}