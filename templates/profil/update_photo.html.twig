{% extends 'base.html.twig' %}

{% block title %}Changer ma photo{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-4">
                <h3 class="fw-bold text-primary mb-4">Modifier ma photo de profil</h3>
                
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="photo_profil" class="form-label">Choisissez une image (JPG, PNG)</label>
                        <input type="file" name="photo_profil" id="photo_profil" class="form-control" required>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">Enregistrer</button>
                        <a href="{{ path('app_user') }}" class="btn btn-light">Retour au profil</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}